---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props;
---

<li>
  <div class="project-card">
    <div class="inner card p-12 bg-[#FFEBE4] flex flex-col gap-8 h-full hover:-translate-y-2 transition-transform">
      <h3 transition:name=`${project.slug}-heading`>
        <a href={project.slug} class="font-bold text-2xl no-underline after:absolute after:inset-0 hover:underline z-10 hover:after:[height:calc(100%_+_8px)]">
          {project.data.title}
        </a>
      </h3>
      <p>{project.data.description}</p>
      <ul transition:name=`${project.slug}-tags` class="cluster tags" role="list">
        {project.data.tags.map((tag) => (<li>{tag}</li>))}
      </ul>
